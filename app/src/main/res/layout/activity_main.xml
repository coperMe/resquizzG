<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/shadow_riddler"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btPlayText"
        android:id="@+id/playButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_purple"
        android:background="@android:color/black"
        android:layout_above="@+id/scoresButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="83dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btScoresText"
        android:id="@+id/scoresButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_purple"
        android:background="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btSettingsText"
        android:id="@+id/settingsButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_purple"
        android:background="@android:color/black"
        android:layout_below="@+id/scoresButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="83dp" />

</RelativeLayout>
