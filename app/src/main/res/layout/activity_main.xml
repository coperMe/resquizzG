<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/llMainActivity">
    <!-- android:background="@drawable/shadow_riddlercutted"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tvPlayersName"
        android:textColor="@color/riddler_purple"
        android:textStyle="bold"
        android:gravity="center_vertical|right"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvNumCalls" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tvNumCalls"
        android:textColor="@color/riddler_purple"
        android:textStyle="bold"
        android:numeric="integer"
        android:gravity="center_vertical|right"
        android:layout_gravity="right"
        android:layout_below="@+id/tvPlayersName"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btPlayText"
        android:id="@+id/playButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_green"
        android:background="@android:color/black"
        android:layout_gravity="top|left"
        android:layout_above="@+id/scoresButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btScoresText"
        android:id="@+id/scoresButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_green"
        android:background="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btSettingsText"
        android:id="@+id/settingsButton"
        android:onClick="onClickButton"
        android:textStyle="bold"
        android:textColor="@color/riddler_green"
        android:background="@android:color/black"
        android:layout_below="@+id/scoresButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp" />

</RelativeLayout>
