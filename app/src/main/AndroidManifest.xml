<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adm.coper.resquizzgotham">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PlayActivity"
            android:label="@string/title_activity_play">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adm.coper.resquizzgotham.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.ScoresActivity"
            android:label="@string/title_activity_scores">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adm.coper.resquizzgotham.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adm.coper.resquizzgotham.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.CreditsActivity"
            android:label="@string/title_activity_credits">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adm.coper.resquizzgotham.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adm.coper.resquizzgotham.Activities.MainActivity" />
        </activity>
    </application>

</manifest>
